# ===========================================
# ENVIRONMENT
# ===========================================
NODE_ENV=development
TZ=Africa/Monrovia

# ===========================================
# DATABASE
# ===========================================
DATABASE_URL=postgresql://sms_user:sms_password@localhost:5432/school_management?schema=public

# ===========================================
# JWT AUTHENTICATION
# ===========================================
JWT_SECRET=change-this-to-a-random-secret-in-production
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# ===========================================
# API CONFIGURATION
# ===========================================
PORT=4000
CORS_ORIGIN=http://localhost:3000

# ===========================================
# REDIS (for BullMQ)
# ===========================================
REDIS_URL=redis://localhost:6379

# ===========================================
# SMTP EMAIL (Mailhog for dev)
# ===========================================
SMTP_HOST=localhost
SMTP_PORT=1025
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM=noreply@school.local
SMTP_SECURE=false

# ===========================================
# SMS CONFIGURATION
# ===========================================
SMS_PROVIDER=log
SMS_API_KEY=
SMS_SENDER=SchoolSMS

# ===========================================
# SCHOOL CONFIGURATION
# ===========================================
SCHOOL_NAME=Demo High School
CURRENCY=LRD
SECONDARY_CURRENCY=USD

# ===========================================
# SEED DATA
# ===========================================
SEED_ADMIN_EMAIL=admin@school.local
SEED_ADMIN_PASSWORD=Admin123!

# ===========================================
# FILE STORAGE
# ===========================================
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=5242880

# ===========================================
# FRONTEND URL (for email links)
# ===========================================
FRONTEND_URL=http://localhost:3000

# ===========================================
# RENDER DEPLOYMENT (when deploying to Render)
# ===========================================
# DATABASE_URL will be auto-injected by Render PostgreSQL
# REDIS_URL will be auto-injected by Render Redis
# Set JWT_SECRET via Render environment variables
# Set FRONTEND_URL to your Render web service URL
