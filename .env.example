# ======================
# Environment Variables
# ======================

# Timezone (Liberia)
TZ=Africa/Monrovia

# Database
DATABASE_URL="postgresql://postgres:postgres@postgres:5432/school_management?schema=public"

# Redis
REDIS_URL="redis://redis:6379"

# JWT
JWT_SECRET="change-this-to-a-secure-random-string-in-production"
JWT_REFRESH_SECRET="change-this-to-another-secure-random-string"

# Admin Seed
SEED_ADMIN_EMAIL="admin@school.local"
SEED_ADMIN_PASSWORD="Admin123!"

# API
PORT=4000
CORS_ORIGIN="http://localhost:3000"

# SMTP (Mailhog in dev)
SMTP_HOST="mailhog"
SMTP_PORT=1025
SMTP_SECURE=false
SMTP_USER=""
SMTP_PASS=""
SMTP_FROM="noreply@school.local"

# SMS Provider (dev log provider)
SMS_PROVIDER="log"
SMS_API_KEY=""

# Currency
DEFAULT_CURRENCY="LRD"
SECONDARY_CURRENCY="USD"

# File Storage
UPLOAD_DIR="./uploads"
REPORTS_DIR="./reports"

# Worker
QUEUE_PREFIX="school_management"

# Next.js Frontend
NEXT_PUBLIC_API_URL="http://localhost:4000"
